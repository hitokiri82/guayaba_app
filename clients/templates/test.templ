{% extends "base.templ" %}
{% block container %}

<form method="post" action="#">

    {% csrf_token %}
    {{ formset.management_form }}
    <table class="table">
        <th>Eliminar</th>
        <th>Tipo</th>
        <th>Numero</th>
        <th>Es preferido?</th>
        {% for form in formset %}
        {{ form.phonenumber_ptr }}
        <tr>
            {% if formset.can_delete %}
                <td>{{form.DELETE}} </td>
            {% endif %}
            <td>
                <div class="control-group {% if form.kind.errors %} error{% endif %}">
                    <span class="help-block">
                        <strong>{{ form.kind.errors }}</strong>
                    </span>
                    {{ form.kind}}
                </div>
            </td>
            <td>
                <div class="control-group {% if form.number.errors %} error{% endif %}">
                    <span class="help-block">
                        <strong>{{ form.number.errors }}</strong>
                    </span>
                    {{ form.number}}
                </div>
            </td>
            <td>
                <div class="control-group {% if form.is_preferred.errors %} error{% endif %}">
                    <span class="help-block">
                        <strong>{{ form.is_preferred.errors }}</strong>
                    </span>
                    {{ form.is_preferred}}
                </div>
            </td>
        </tr>
        {% endfor %}
    </table>
    <div class="form-actions">
        <input type="submit" name="confirm_add" value="Añadir" class="btn btn-primary" id="submit-id-add_nat_client">‌
        <input type="reset" name="cancel" value="Cancelar" class="btn reset" id="button-id-cancel">‌
    </div>
</form>
{% endblock container %}
